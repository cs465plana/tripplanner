<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs465.tripplanner.AddBudgetActivity"
    tools:showIn="@layout/activity_add_budget">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto_slab_light"
        android:text="$"
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        android:id="@+id/add_budget_dollar_text" />

    <EditText
        android:id="@+id/add_budget_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_budget_dollar_text"
        android:layout_toEndOf="@+id/add_budget_dollar_text"
        android:layout_toStartOf="@+id/add_budget_unit"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/roboto_slab"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimary"
        android:textSize="45dp"
        tools:text="100" />

    <TextView
        android:id="@+id/add_budget_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_budget_amount"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/roboto_slab_light"
        android:text="per day"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

</RelativeLayout>
