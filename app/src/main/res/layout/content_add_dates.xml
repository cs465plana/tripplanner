<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:theme="@style/AppThemeDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_dates">

    <TextView
        android:id="@+id/add_dates_from_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto_slab_light"
        android:text="From"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/add_dates_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_dates_from_label"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/add_dates_from_label"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/roboto_slab"
        android:inputType="none"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:text="Nov 12, 2017" />

    <TextView
        android:id="@+id/add_dates_to_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_dates_from"
        android:layout_marginTop="35dp"
        android:layout_toStartOf="@+id/add_dates_from"
        android:fontFamily="@font/roboto_slab_light"
        android:text="To"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/add_dates_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_dates_to_label"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/add_dates_from"
        android:layout_below="@+id/add_dates_from"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/roboto_slab"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:text="Nov 20, 2017" />

</RelativeLayout>
