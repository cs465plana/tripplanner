<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_suggestion">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/addsuggestionimg"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">
        <cs465.tripplanner.RowLayout
            android:id="@+id/tag_section_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:paddingLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.Tag"
                android:visibility="gone"
                tools:text="#uidesign"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.Tag"
                android:visibility="gone"
                tools:text="#projects"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.Tag"
                android:visibility="gone"
                tools:text="#deadline"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.Tag"
                android:visibility="gone"
                tools:text="+add new"
                tools:visibility="visible" />


        </cs465.tripplanner.RowLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tag_section_add"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="FREE"
            android:textSize="32dp" />

    </RelativeLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1"
        >

        <TableRow android:layout_height="1dp"
            android:background="#BDBDBD">
            <TextView android:layout_span="1"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:text="">
            </TextView>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Comments"
                android:textSize="18dip"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="25dp"/>
        </TableRow>

        <TableRow android:layout_height="1dp"
            android:background="#BDBDBD">
            <TextView android:layout_span="1"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:text="">
            </TextView>
        </TableRow>

        <TableRow>
            <EditText
                android:hint="Add comments here"
                android:textSize="18dp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_height="75dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="25dp"
                android:inputType="text"
                />
        </TableRow>

        <TableRow android:layout_height="1dp"
            android:background="#BDBDBD">
            <TextView android:layout_span="1"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:text="">
            </TextView>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Photos"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="25dp"/>
        </TableRow>

        <TableRow android:layout_height="1dp"
            android:background="#BDBDBD">
            <TextView android:layout_span="1"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:text="">
            </TextView>
        </TableRow>


    </TableLayout>

</LinearLayout>