<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs465.tripplanner.AddBudgetActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_add_budget"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:contentInsetEnd="@dimen/toolbar_padding"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="@dimen/toolbar_padding"
            app:contentInsetEnd="@dimen/toolbar_padding"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="@dimen/toolbar_padding"
            app:popupTheme="@style/PopupOverlay">

            <ImageButton
                android:id="@+id/budget_back_button"
                style="@style/ToolbarNavButton"
                android:layout_gravity="start"
                app:srcCompat="@drawable/maps_button" />

            <TextView
                style="@style/ToolbarAddTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_activity_add_budget"
                android:textColor="@color/colorTextPrimary" />

            <ImageButton
                android:id="@+id/budget_next_button"
                style="@style/ToolbarNavButton"
                android:layout_gravity="end"
                app:srcCompat="@drawable/dates_button1" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_add_budget" />

</android.support.design.widget.CoordinatorLayout>
